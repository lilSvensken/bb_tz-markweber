{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./",
    "paths": {
      "@common/*": [
        "src/app/common/*"
      ]
    },
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "module": "es2020",
    "target": "es2015",
    "jsx": "react",
    "lib": ["es2018", "dom"],
    "allowJs": true
  },
  "exclude": [
    "spec"
  ]
}
